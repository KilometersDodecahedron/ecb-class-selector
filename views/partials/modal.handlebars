<section class="modal-holder modal-holder--invisible">
    <div class="modal-content-box">
        <div class="modal-x-btn-holder">
            <button class="modal-x-btn clickable">&#10005;</button>
        </div>
        <!-- image carousel -->
        <!-- https://www.youtube.com/watch?v=VYsVOamdB0g&list=RDCMUCJZv4d5rbIKd4QHMPkcABCw&start_radio=1&rv=VYsVOamdB0g&t=79 -->
        <div class="modal-carousel">
            <button class="modal-carousel-button modal-carousel-button--left clickable">
                &#10094;
            </button>
            <div class="modal-carousel-track-container">
                <ul class="modal-carousel-track">
                    <li class="modal-carousel-slide modal-carousel-slide--current-slide">
                        <img class="modal-carousel-image" src="#" alt="">
                    </li>
                    <li class="modal-carousel-slide">
                        <img class="modal-carousel-image" src="#">
                    </li>
                    <li class="modal-carousel-slide">                           
                        <img class="modal-carousel-image" src="#">
                    </li>
                </ul>
            </div>
            <button class="modal-carousel-button modal-carousel-button--right clickable">
                &#10095;
            </button>
            <div class="modal-carousel-nav">
                <button data-carousel-index="0" class="modal-carousel-indicator modal-carousel-indicator--current-slide clickable"></button>
                <button data-carousel-index="1" class="modal-carousel-indicator clickable"></button>
                <button data-carousel-index="2" class="modal-carousel-indicator clickable"></button>
            </div>
        </div>
        <section class="modal-class-general-info-holder">
            <!-- class name -->
            <h1 class="modal-class-name modal-class--title">Name of Class</h1>
            <!-- class description -->
            <h2 class="modal-class--title add-space-after--short">Description</h2>
            <p class="modal-class-description modal-class--content add-space-after--long"></p>
            <!-- class price -->
            <h2 class="modal-class--title add-space-after--short">Pricing</h2>
            <div class="modal-class-price modal-class--content">
                <div>Virtual: $Amount per Student</div>
                <div>In Person: $Amount per Student</div>
                <div>Hybrid: $Amount per Student</div>
                <div>Virtual Class Addon: $Amount per Student</div>
            </div>
            {{!-- whats included --}}
            <h2 class="modal-class--title add-space-after--short">What's Included</h2>
            <p class="modal-class-whats-included modal-class--content add-space-after--long"></p>
            {{!-- whats required --}}
            <h2 class="modal-class--title add-space-after--short">What's Required</h2>
            <p class="modal-class-whats-required modal-class--content add-space-after--long"></p>
            <h2 class="modal-class--title add-space-after--short">Additional Info</h2>
            {{!-- difficulty --}}
            <div class="modal-class-difficulty modal-class--content">Difficulty: Checking</div>
            <!-- class availability -->
            <div class="modal-class-availability modal-class--content">Available: Virtual, In Person, and Hybrid</div>
            <!-- class duration -->
            <div class="modal-class-duration modal-class--content">Duration: 2-3 hours</div>
            <!-- class age group -->
            <div class="modal-class-recomended-age-group modal-class--content">Age Group: Adult</div>
            <!-- class minimum participants -->
            <div class="modal-class-minimum-participants modal-class--content">Minimum Participants Required: 4</div>
            <!-- class disclaimer -->
            <div class="modal-class-disclaimer modal-class--content">Disclamer: Does kristen want this formatted as free text, or a bulleted list?</div>
        </section>
        <!-- video preview -->
        <div class="modal-class-preview-video-holder d-none">
            <iframe class="modal-class-preview-video" src="https://www.youtube.com/embed/tgbNymZ7vqY" frameborder="0" title="YouTube video player" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture"></iframe>
        </div>
        <!-- request class button -->
        <div class="modal-class-request-class-btn-holder">
            <button class="modal-class-request-class-btn clickable">Request Class</button>
        </div>
        <section class="request-form-holder invisible">
            <form class="request-form">
                <div class="request-form-grid-section">
                    <div class="flex-adaptable grid-full-line request-form-color-group">
                        <div>
                            <label for="first-name" class="request-label essential-field-first-name">First Name</label><br>
                            <input type="text" class="modal-colored-input-field" name="first-name" id="first-name">
                        </div>
                        <div>
                            <label for="last-name" class="request-label essential-field-last-name">Last Name</label><br>
                            <input type="text" class="modal-colored-input-field" name="last-name" id="last-name">
                        </div>
                        <div>
                            <label for="email" class="request-label essential-field-email">Email</label><br>
                            <input type="email" class="modal-colored-input-field" name="email" id="email">
                        </div>
                    </div>
                    <div class="grid-full-line flex-adaptable request-form-color-group">
                        <div>
                            <label for="tel" class="request-label essential-field-phone-number">Phone Number</label><br>
                            <input type="tel" class="modal-colored-input-field" name="tel" id="tel">
                        </div>
                        <div class="request-form-phone-type-radio-holder flex-adaptable">
                            <div>
                                <label for="cellphone-type" class="request-option">Cell Phone</label>
                                <input type="radio" name="phone-number-type" id="cellphone-type" checked>
                            </div>
                            <div>
                                <label for="landline-type" class="request-option">Landline Phone</label>
                                <input type="radio" name="phone-number-type" id="landline-type">
                            </div>
                        </div>
                    </div>
                    <div class="request-form-color-group grid-full-line">
                        <label for="participants" class="request-label essential-field-participants">Number of Participants</label><br>
                        <input type="number" class="modal-colored-input-field" min="1" name="participants" id="participants">
                    </div>
                    <div id="class-type-holder" class="grid-full-line flex-adaptable request-form-color-group">
                        <div class="request-form-option-name request-label">
                            Class Type:
                        </div>
                        <div id="class-type-virtual-holder">
                            <label for="class-type-virtual" class="request-option">Virtual</label>
                            <input type="radio" name="class-type" id="class-type-virtual">
                        </div>
                        <div id="class-type-virtual-no-kit-holder">
                            <label for="class-type-virtual-no-kit" class="request-option">Virtual (No Kit)</label>
                            <input type="radio" name="class-type" id="class-type-virtual-no-kit">
                        </div>
                        <div id="class-type-inperson-holder">
                            <label for="class-type-inperson" class="request-option">In Person</label>
                            <input type="radio" name="class-type" id="class-type-inperson">
                        </div>
                    </div>
                    <div class="grid-full-line request-form-color-group flex-adaptable">
                        <div id="essential-field-dateTime" class="modal-full-line-lable">
                            Desired Date and Time (At least 1)
                        </div>
                        <div class="grid-full-line flex-adaptable full-width">
                            <div>
                                <label for="date" class="request-label essential-field-date">1st Choice</label>
                                <input type="text" class="modal-colored-input-field" name="date" id="date">
                            </div>
                            <div>
                                {{!-- <label for="time" class="request-label essential-field-time">Desired Time</label> --}}
                                <input type="time" class="modal-colored-input-field" name="time" id="time">
                            </div>
                        </div>
                        <div class="grid-full-line flex-adaptable full-width">
                            <div>
                                <label for="date-second-choice" class="request-label essential-field-date">2nd Choice</label>
                                <input type="text" class="modal-colored-input-field" name="date" id="date-second-choice">
                            </div>
                            <div>
                                {{!-- <label for="time" class="request-label essential-field-time"></label> --}}
                                <input type="time" class="modal-colored-input-field" name="time" id="time-second-choice">
                            </div>
                        </div>
                        <div class="grid-full-line flex-adaptable full-width">
                            <div>
                                <label for="date-third-choice" class="request-label essential-field-date">3rd Choice</label>
                                <input type="text" class="modal-colored-input-field" name="date" id="date-third-choice">
                            </div>
                            <div>
                                {{!-- <label for="time" class="request-label essential-field-time">Desired Time</label> --}}
                                <input type="time" class="modal-colored-input-field" name="time" id="time-third-choice">
                            </div>
                        </div>
                        <div id="timezone-offset-holder">
                            <label for="timezone_offset" class="request-label">Timezone</label>
                            <select name="timezone_offset" id="timezone-offset" class="request-form-timezone-selector"> <!-- populated programatically --> </select>
                        </div>
                    </div>
                </div>
                <div class="flex-vertical request-form-color-group" id="event-location-radio-holder">
                    <div class="request-form-option-name request-label">
                        Prefered Event Location:
                    </div>
                    <div id="location-store-holder">
                        <label for="location-store" class="request-option">ECB in Montclair (6 person Maximum)</label>
                        <input type="radio" name="location-type" id="location-store">
                    </div>
                    <div id="location-club-holder">
                        <label for="location-club" class="request-option">Montclair Women's Club (7 person Minimum)</label>
                        <input type="radio" name="location-type" id="location-club">
                    </div>
                    <div id="location-host-holder" class="flex-adaptable">
                        <div id="location-host-radio-button-holder-for-when-only-custom-locations-are-allowed">
                            <label for="location-host" class="request-option">My own venue</label>
                            <input type="radio" name="location-type" id="location-host">
                        </div>
                        <div>
                            <label for="location-address" class="request-option essential-field-address">Host Address</label>
                            <input type="text" class="modal-colored-input-field" name="location-host-address" id="location-address">
                        </div>
                    </div>
                </div>
                <div id="age-group-holder" class="flex-adaptable request-form-color-group">
                    <div class="request-form-option-name request-label">
                        Age of Participants
                    </div><br>
                    <div id="adult-age-holder">
                        <label for="adult-age" class="request-option">Adult</label>
                        <input type="radio" name="age-group" id="adult-age">
                    </div>
                    <div id="teen-age-holder">
                        <label for="teen-age" class="request-option">Teen</label>
                        <input type="radio" name="age-group" id="teen-age">
                    </div>
                    <div id="child-age-holder">
                        <label for="child-age" class="request-option">Child</label>
                        <input type="radio" name="age-group" id="child-age">
                    </div>
                    <div id="mixed-age-holder">
                        <label for="mixed-age" class="request-option">Mixed</label>
                        <input type="radio" name="age-group" id="mixed-age">
                    </div>
                </div>
                <div id="gift-option-holder" class="flex-adaptable request-form-color-group">
                    <div class="request-form-option-name request-label">
                        Is this Class a Gift for someone else? 
                    </div>
                    <div id="gift-option-yes-holder">
                        <label for="gift-option-yes" class="request-option">Yes</label>
                        <input type="radio" name="gift-option" id="gift-option-yes">
                    </div>
                    <div id="gift-option-no-holder">
                        <label for="gift-option-no" class="request-option">No</label>
                        <input type="radio" name="gift-option" id="gift-option-no">
                    </div>
                </div>
                <div class="request-form-non-grid-section request-form-color-group">
                    <div>
                        <label for="special-instructions" class="request-label">Comments and/or Special Instructions</label>
                        <br>
                        <textarea class="request-form-comment-textarea modal-colored-input-field" name="special-instructions" id="request-form-option-name" cols="30" rows="3"></textarea>
                    </div>
                </div>
                <div class="submit-button-holder">
                    <input type="submit" id="submit-button">
                </div>
            </form>
        </section>
</section>